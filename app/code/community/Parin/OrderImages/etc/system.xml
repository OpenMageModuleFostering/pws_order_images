<?xml version="1.0" encoding="UTF-8"?>
<config>
	<tabs>
		<parin_extensions>
			<label>Parin Web Solutions</label>
			<sort_order>195</sort_order>
		</parin_extensions>
	</tabs>
    <sections>
        <orderimages translate="label" >
            <label>Order Images</label>
            <tab>parin_extensions</tab>
            <frontend_type>text</frontend_type>
            <sort_order>90</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
		<about translate="label">	
                    <label>Developer</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>0</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>					
                            <fields>
                                    <info translate="label">
                                            <frontend_model>orderimages/about</frontend_model>
                                            <sort_order>1</sort_order>
                                            <show_in_default>1</show_in_default>
                                            <show_in_website>1</show_in_website>
                                            <show_in_store>1</show_in_store>
                                    </info>																
                            </fields>
                </about>
                <backend translate="label">
                    <label>Backend Order Images</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <width translate="label">
                            <label>Thumbnail Width</label>
                            <validate>required-entry validate-number</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                            <comment><![CDATA[in pixels.]]></comment>
                        </width>
                        <height translate="label">
                            <label>Thumbnail Height</label>
                            <validate>required-entry validate-number</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </height>
                        <max_width translate="label">
                            <label>Width</label>
                            <validate>required-entry validate-number</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </max_width>
                        <max_height translate="label">
                            <label>Height</label>
                            <validate>required-entry validate-number</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </max_height>
                </fields>
                </backend>	
                <!-- Front end setting -->
                <frontend translate="label">
                    <label>Frontend Order Images</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <width translate="label">
                            <label>Thumbnail Width</label>
                            <validate>required-entry validate-number</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                            <comment><![CDATA[in pixels.]]></comment>
                        </width>
                        <height translate="label">
                            <label>Thumbnail Height</label>
                            <validate>required-entry validate-number</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </height>
                        <max_width translate="label">
                            <label>Width</label>
                            <validate>required-entry validate-number</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </max_width>
                        <max_height translate="label">
                            <label>Height</label>
                            <validate>required-entry validate-number</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </max_height>
                </fields>
                </frontend>							
            </groups>
	</orderimages>
    </sections>
</config>